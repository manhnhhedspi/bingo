<% if session[:player_name] %>
<div style="text-align: center;">
  <h2>Good luck!!! <strong style="color: green;"><%= session[:player_name] %></strong> !</h2>
  <div class="table-responsive">
  <table class="table table-hover table-bordered table-condensed">
  <!-- @playerのインスタンスのなかに(0..4)の情報はすでにないか？-->
  <!-- We need index of card to access card status, so we don't change this loop type -->
  <% (Player::BEGIN_CARD_INDEX..Player::END_CARD_INDEX).each do |row| %>
    <tr>
    <% (Player::BEGIN_CARD_INDEX..Player::END_CARD_INDEX).each do |column| %>
      <% if @player.card[row][column] != 0 && @player.card_status[row][column] == 0 %>
        <td align="center">
        <%= form_tag({:controller => :player, :action => :update}, remote: true, id: "form-number") do %>
          <%= hidden_field_tag(:row, row) %>
          <%= hidden_field_tag(:column, column) %>
          <%= hidden_field_tag(:number, @player.card[row][column]) %>
          <%= hidden_field_tag(:type_of_action, "check_number") %>
          <%= submit_tag(@player.card[row][column], id: "#{@player.card[row][column]}", onclick: "this.disabled=true",class: "btn-none-effect" ) %>
        <% end %>
        </td>
      <% else %>
        <% if @player.card[row][column] == 0 %>
          <td align="center">
            <div id="form-number"><button id = "free">Free</button></div>
          </td>
        <% else %>
          <td align="center">
            <div id="form-number"><button id = "free"><%= @player.card[row][column] %></button></div>
          </td>
        <% end %>
      <%end%>
    <% end %>
    </tr>
  <% end %>
  </table>
  </div>

  <div id="response"></div>
  <audio id="sound_reach" src="/assets/reach.mp3" preload="auto"></audio>
  <% if @player.reach_status == true %>
     <%= button_to "REACH", {:controller => "player", :action => "update", :type_of_action => "reach"}, { remote: true, method: "post", disabled: false, class: "btn btn-primary btn-lg btn-block", id: 'reach', onclick: "this.disabled=true"} %><br>
  <% else %>
    <%= button_to "REACH", {:controller => "player", :action => "update", :type_of_action => "reach"}, { remote: true, method: "post", disabled: true, class: "btn btn-default btn-lg btn-block", id: 'reach', onclick: "this.disabled=true"} %><br>
  <% end %>
  <audio id="sound_bingo" src="/assets/bingo.mp3" preload="auto"></audio>
  <% if @player.bingo_status == true %>
    <%= button_to "BINGO", {:controller => "player", :action => "update", :type_of_action => "bingo"}, { remote: true, method: "post", disabled: false, class: "btn btn-primary btn-lg btn-block", id: 'bingo', onclick: "this.disabled=true" } %>
  <% else %>
    <%= button_to "BINGO", {:controller => "player", :action => "update", :type_of_action => "bingo"}, { remote: true, method: "post", disabled: true, class: "btn btn-default btn-lg btn-block", id: 'bingo', onclick: "this.disabled=true" } %>
  <% end %>
  <h5>Dealer spoke number: </h5>
  <div id="spoke_number">
  </div>
</div>
<% else %>
  <script type="text/javascript">
    window.location.href="/session/new";
  </script>
<% end %>
